  tt_cancel_show = '/patients/lab_results_dashboard/?patient_id=<%= @patient.id %>&user_id=<%= session[:user_id] %>';
  tt_cancel_destination = '/patients/lab_results_dashboard/?patient_id=<%= @patient.id %>&user_id=<%= session[:user_id] %>';
