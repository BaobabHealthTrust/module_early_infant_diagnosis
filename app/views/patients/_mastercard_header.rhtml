<table width="100%">
  <tr>
    <th align="left" style="font-style: italic;">
      HIV Care Patient Card
    </th>
    <th style="vertical-align: top; font-style: italic; width: 240px;" align="left">
      Exposed Child Under 24 Months
    </th>
    <td align="center"  style="vertical-align: top">
      Transfer-In Date
    </td>
    <th align="center"  style="vertical-align: top">
      HIV Care Clinic No
    </th>
    <th align="center" style="vertical-align: top">
      <b>ART No</b><span style="font-size: 0.8em; font-weight: normal;">(when started)</span>
    </th>
    <th>
      Birth Cohort
    </th>
  </tr>
  <tr>
    <td>
      <div style="background-color: #999; padding: 5px; color: #fcc; width: 90px;
           font-weight: bold; vertical-align: middle; text-align: center;">
        Pink Card
      </div>
    </td>
    <td style="vertical-align: top">
      <i style="float: left;">Version 1</i>
      <i style="margin-left: 50px"></i>
    </td>
    <td style="vertical-align: top">
      <div style="border: 1px solid #000; padding: 5px; min-width: 80px; text-align: center; font-style: italic;">
        <%= @mastercard.transfer_in_date.strftime("%d-%b-%Y") rescue "" %>&nbsp;
      </div>
    </td>
    <td style="vertical-align: top">
      <div style="border: 1px solid #000; padding: 5px; min-width: 80px; text-align: right;">
        -HCC
      </div>
    </td>
    <td style="vertical-align: top">
      <div style="border: 1px solid #000; padding: 5px; min-width: 80px; text-align: center; font-style: italic;">
        <%= @mastercard.arv_number rescue "" %>&nbsp;
      </div>
    </td>
    <td style="vertical-align: top;" align="center">
      <div style="border: 1px solid #000; min-width: 120px; display: table; border-spacing: 0px; padding: 0px">
        <div style="display: table-row; padding: 0px">
          <div style="display: table-cell; width: 50%; padding: 0px; height: 28px; text-align: center; font-style: italic;">
            <sup style="float: left;">Month</sup>
            <div style="margin-top: 10px; margin-right: 10px; float: right;"><%= @patient.person.birthdate.strftime("%b") rescue "" %>&nbsp;</div>
          </div>
          <div style="display: table-cell; width: 50%; border-left: 1px solid #000; padding: 0px">
            <sup style="float: left;">Year</sup>
            <div style="margin-top: 10px; margin-right: 10px; float: right;">
              <%= @patient.person.birthdate.strftime("%Y") rescue "" %>&nbsp;
            </div>
          </div>
        </div>        
      </div>
    </td>
  </tr>
</table>
